{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Sync dependencies",
      "type": "shell",
      "command": "uv sync",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run: CLI",
      "type": "shell",
      "command": "uv run preprocessor",
      "problemMatcher": []
    },
    {
      "label": "Run: UI",
      "type": "shell",
      "command": "uv run preprocessor ui",
      "problemMatcher": []
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "uv run pytest -q",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Coverage",
      "type": "shell",
      "command": "uv run pytest -q --cov",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Type check",
      "type": "shell",
      "command": "uv run mypy src tests",
      "problemMatcher": []
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "uv run ruff check .",
      "problemMatcher": []
    },
    {
