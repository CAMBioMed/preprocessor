{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Sync dependencies",
      "type": "shell",
      "command": "uv sync",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run: CLI",
      "type": "shell",
      "command": "uv run preprocessor",
      "problemMatcher": []
    },
    {
      "label": "Run: GUI",
      "type": "shell",
      "command": "uv run preprocessor gui",
      "problemMatcher": []
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "uv build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "uv run pytest -q",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Coverage",
      "type": "shell",
      "command": "uv run pytest -q --cov",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Type check",
      "type": "shell",
      "command": "uv run mypy src tests",
      "problemMatcher": []
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "uv run ruff check .",
      "problemMatcher": []
    },
    {
      "label": "Format",
      "type": "shell",
      "command": "uv run ruff format .",
      "problemMatcher": []
    },
    {
      "label": "Checks",
      "dependsOn": [
        "Sync dependencies",
        "Lint",
        "Type check",
        "Test",
        "Build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}